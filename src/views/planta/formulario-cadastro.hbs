<div 
  style="
    background: #ffffff; 
    border-radius: 16px; 
    padding: 25px 35px; 
    box-shadow: 0 4px 10px rgba(0,0,0,0.08); 
    border: 1px solid #e0e0e0; 
    margin-top: 40px;
  ">
  <h2 style="
    font-size: 1.8rem; 
    font-weight: 700; 
    color: #1a5748; 
    border-bottom: 2px solid #1a5748; 
    padding-bottom: 8px;
  ">
    {{#if planta.id}}Editar Planta{{else}}Cadastro de Planta{{/if}}
  </h2>

  {{#if error}}
    <div class="alert alert-danger" style="
      margin-top: 10px; 
      padding: 10px; 
      background-color: #f8d7da; 
      color: #721c24; 
      border-radius: 8px;
    ">
      {{#each error}}
        <p style="margin: 0;">{{this.message}}</p>
      {{/each}}
    </div>
  {{/if}}

  <form method="post" action="{{#if planta.id}}/planta/{{planta.id}}/editar-salvar{{else}}/planta/novo/salvar{{/if}}" style="
    display: flex; 
    flex-direction: column; 
    gap: 15px; 
    margin-top: 20px;
  ">

    <label for="nome" style="font-weight: 600; color: #133E34;">Nome</label>
    <input type="text" name="nome" id="nome" value="{{planta.nome}}"  style="
      border-radius:10px; 
      border:1px solid #E5E5E5; 
      padding:10px 14px; 
      width: 80%;
    ">

  <div style="display: flex; gap: 20px; width: 100%">

  <div style="flex: 1">
    <label for="necessidade_hidrica" style="font-weight: 600; color: #133E34;">Necessidade Hídrica</label>
    <select name="necHidrica" id="necessidade_hidrica" style="
      border-radius:10px; 
      border:1px solid #E5E5E5; 
      padding:10px; 
      width: 100%;
    ">
      <option value="">Selecione</option>
      {{#each necHidrica}}
        <option value="{{this.id}}" {{#ifEquals this.id ../planta.necessidade_hidrica_id}}selected{{/ifEquals}}>
          {{this.nome}} ({{this.qtdLitro}} L)
        </option>
      {{/each}}
    </select>
  </div>

    <div style="flex: 1">
      <label for="sensor" style="font-weight: 600; color: #133E34;">Sensor</label>
      <select name="sensor" id="sensor" style="
        border-radius:10px; 
        border:1px solid #E5E5E5; 
        padding:10px; 
        width: 100%;
      ">
        <option value="">Selecione</option>
        {{#each sensor}}
          <option value="{{this.id}}" {{#ifEquals this.id ../planta.sensor_id}}selected{{/ifEquals}}>
            {{this.nome}} ({{this.tipoSensor.nome}})
          </option>
        {{/each}}
      </select>
    </div>

    </div>
    <label for="rotina" style="font-weight: 600; color: #133E34;">Rotina de Irrigação</label>
    <select name="rotina" id="rotina" style="
      border-radius:10px; 
      border:1px solid #E5E5E5; 
      padding:10px; 
      width: 50%;
    ">
      <option value="">Selecione uma rotina</option>
      {{#each rotina}}
        <option value="{{this.id}}" {{#ifEquals this.id ../planta.rotina_id}}selected{{/ifEquals}}>
          {{this.nome}}
        </option>
      {{/each}}
    </select>

    <div style="
      display:flex; 
      justify-content:center; 
      gap:20px; 
      margin-top:30px;
    ">
      <a href="/planta/listagem" style="
        background-color:#CDE3DC; 
        border:none; 
        color:#133E34; 
        font-weight:500; 
        border-radius:10px; 
        padding:10px 18px; 
        text-decoration:none; 
        display: flex; 
        align-items: 
        center; gap: 6px;
      ">
        <i class="fa-solid fa-circle-xmark"></i> Cancelar
      </a>
      <button type="submit" style="
        background-color:#133E34; 
        border:none; 
        color:white; 
        font-weight:500; 
        border-radius:10px; 
        padding:10px 18px; 
        cursor:pointer;
      ">
        {{#if planta.id}}Atualizar{{else}}Cadastrar{{/if}}
      </button>
    </div>
    
  </form>
</div>
