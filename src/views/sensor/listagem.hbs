{{#if success}}
  <div class="alert alert-success">
      {{#each success}}
          {{this}}
      {{/each}}
  </div>
{{/if}}

<div class="container mt-4">
    <h2 class="mb-4">Consultas de Sensores</h2>

    <div class="d-flex mb-4">
        <form class="d-flex me-2" method="get" action="/sensor">
            <input class="form-control me-2"
                type="search"
                name="nome"
                placeholder="Digite o nome do sensor"
                aria-label="Pesquisar sensor">
            <button class="btn btn-primary" type="submit">Pesquisar</button>
        </form>

        <a href="/sensor/novo" class="btn btn-success">Cadastrar Sensor</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome do Sensor</th>
                <th>Tipo</th>              
                <th>Localização</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#if sensores.length}}
                {{#each sensores}}
                    <tr>
                        <td>{{nome}}</td>
                        <td>{{tipo}}</td>                    
                        <td>{{localizacao}}</td>
                        <td>{{status}}</td>
                        <td>
                            <a href="/sensor/editar/{{id}}" class="btn btn-sm btn-warning me-2">Editar</a>
                            <a href="/sensor/excluir/{{id}}" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir este sensor?')">Excluir</a>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        Nenhum sensor cadastrado.
                    </td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</div>
