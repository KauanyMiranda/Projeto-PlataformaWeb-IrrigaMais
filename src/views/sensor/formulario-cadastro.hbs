<div class="container mt-5">
  <h2 class="mb-4">{{#if sensor.id}}Editar Sensor{{else}}Cadastro de Sensor{{/if}}</h2>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form method="post" action="{{#if sensor.id}}/sensor/editar/{{sensor.id}}{{else}}/sensor/novo/salvar{{/if}}">
    
    <div class="mb-3">
      <label for="nomeSensor" class="form-label">Nome do Sensor</label>
      <input type="text" name="nome" id="nomeSensor" class="form-control" value="{{sensor.nome}}" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Tipo do Sensor</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="tipo" id="umidade" value="umidade" {{#if (ifEquals sensor.tipo "umidade")}}checked{{/if}} required>
        <label class="form-check-label" for="umidade">Umidade</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="tipo" id="chuva" value="chuva" {{#if (ifEquals sensor.tipo "chuva")}}checked{{/if}} required>
        <label class="form-check-label" for="chuva">Chuva</label>
      </div>
    </div>

    <div class="mb-3">
      <label for="localizacaoSensor" class="form-label">Localização do Sensor</label>
      <input type="text" name="localizacao" id="localizacaoSensor" class="form-control" value="{{sensor.localizacao}}" placeholder="Ex: Estufa 1 - Lado Norte">
    </div>

    <div class="mb-3">
      <label class="form-label">Status do Sensor</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="status" id="ativo" value="ativo" {{#if (ifEquals sensor.status "ativo")}}checked{{/if}} required>
        <label class="form-check-label" for="ativo">Ativo</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="status" id="inativo" value="inativo" {{#if (ifEquals sensor.status "inativo")}}checked{{/if}} required>
        <label class="form-check-label" for="inativo">Inativo</label>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">{{#if sensor.id}}Atualizar{{else}}Cadastrar{{/if}}</button>
  </form>
</div>
