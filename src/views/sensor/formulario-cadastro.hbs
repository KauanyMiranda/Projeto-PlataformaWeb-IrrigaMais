<div style="background: #ffffff; border-radius: 16px; padding: 25px 35px; box-shadow: 0 4px 10px rgba(0,0,0,0.08); border: 1px solid #e0e0e0; margin-top: 40px;">

  <h2 style="font-size: 1.8rem; font-weight: 700; color: #1a5748; border-bottom: 2px solid #1a5748; padding-bottom: 8px;">
    Cadastro de Sensor
  </h2>

  {{#if error}}
    <div class="alert alert-danger" style="margin-top: 10px; padding: 10px; background-color: #f8d7da; color: #721c24; border-radius: 8px;">
      {{#each error}}
        <p style="margin: 0;">{{this.message}}</p>
      {{/each}}
    </div>
  {{/if}}

  <form method="post" action="/sensor/novo/salvar" style="display: flex; flex-direction: column; gap: 15px; margin-top: 20px;">

    <!-- Nome -->
    <label for="nomeSensor" style="font-weight: 600; color: #133E34;">Nome</label>
    <input 
      type="text" 
      name="nome" 
      id="nomeSensor" 
      value="{{old.nome}}"  
      style="border-radius:10px; border:1px solid #E5E5E5; padding:10px 14px; width: 100%;">

    <!-- Tipo de Sensor -->
    <label for="tipo_sensor" style="font-weight: 600; color: #133E34;">Tipo de Sensor</label>
    <select 
      name="tipo_sensor_id" 
      id="tipo_sensor"
      style="border-radius:10px; border:1px solid #E5E5E5; padding:10px; width: 100%;">
      <option value="">Selecione</option>
      {{#each tiposSensores}}
        <option value="{{this.id}}" {{selected-option this.id '' ../old.tipo_sensor_id}}>
          {{this.nome}} ({{this.unidade_medida}})
        </option>
      {{/each}}
    </select>

    <!-- Localização -->
    <label for="localizacaoSensor" style="font-weight: 600; color: #133E34;">Localização</label>
    <input 
      type="text" 
      name="localizacao" 
      id="localizacaoSensor" 
      value="{{old.localizacao}}"  
      style="border-radius:10px; border:1px solid #E5E5E5; padding:10px 14px; width:100%;">

    <!-- Status -->
    <label style="font-weight: 600; color: #133E34;">Status</label>
    <select name="status" style="border-radius:10px; border:1px solid #E5E5E5; padding:10px; width: 100%;">
      <option value="true"  {{selected-option true '' old.status}}>Ativo</option>
      <option value="false" {{selected-option false '' old.status}}>Inativo</option>
    </select>

    <div style="display:flex; justify-content:center; gap:20px; margin-top:30px;">
      <a href="/sensor" style="background-color:#CDE3DC; border:none; color:#133E34; font-weight:500; border-radius:10px; padding:10px 18px; text-decoration:none; display: flex; align-items: center; gap: 6px;">
        <i class="fa-solid fa-circle-xmark"></i> Cancelar
      </a>

      <button type="submit" style="background-color:#133E34; border:none; color:white; font-weight:500; border-radius:10px; padding:10px 18px; cursor:pointer;">
        Cadastrar
      </button>
    </div>

  </form>
</div>
