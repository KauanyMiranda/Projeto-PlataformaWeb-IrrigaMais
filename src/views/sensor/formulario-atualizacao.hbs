<div class="container" style="
  background: #ffffff;
  border-radius: 16px;
  padding: 25px 35px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  border: 1px solid #e0e0e0;
  margin-top: 40px;
">
  <h2 style="font-size: 1.8rem; font-weight: 700; color: #1a5748; border-bottom: 2px solid #1a5748; padding-bottom: 8px;">
    Atualiza√ß√£o de Sensor
  </h2>

  {{#if error}}
    <div class="alert alert-danger" style="margin-top: 20px; padding: 10px; background-color: #f8d7da; color: #721c24; border-radius: 8px;">
      {{#each error}}
        <p class="p-0 m-0">{{this}}</p>
      {{/each}}
    </div>
  {{/if}}

  <!-- üö® Corrigido aqui -->
  <form method="post" action="/sensor/{{sensor.id}}/atualizacao-salvar?_method=put" 
        style="margin-top: 30px; display:flex; flex-direction:column; gap:15px;">

    <!-- Nome -->
    <div>
      <label for="nome" style="font-weight:500;">Nome do Sensor</label>
      <input type="text" name="nome" id="nome" 
             value="{{getValue old.nome sensor.nome}}" 
             style="width:100%; padding:10px; border-radius:10px; border:1px solid #E5E5E5;">
    </div>

    <!-- Localiza√ß√£o -->
    <div>
      <label for="localizacao" style="font-weight:500;">Localiza√ß√£o</label>
      <input type="text" name="localizacao" id="localizacao" 
             value="{{getValue old.localizacao sensor.localizacao}}" 
             style="width:100%; padding:10px; border-radius:10px; border:1px solid #E5E5E5;">
    </div>

    <div style="display:flex; gap:20px; flex-wrap:wrap;">

      <!-- Status -->
      <div style="flex:1; min-width:150px;">
        <label for="status" style="font-weight:500;">Status</label>
        <select name="status" id="status"
                style="width:100%; padding:10px; border-radius:10px; border:1px solid #E5E5E5;">
          <option value="true" {{selected-option true sensor.status old.status}}>Ativo</option>
          <option value="false" {{selected-option false sensor.status old.status}}>Inativo</option>
        </select>
      </div>

      <!-- Tipo de Sensor -->
      <div style="flex:1; min-width:150px;">
        <label for="tipo_sensor_id" style="font-weight:500;">Tipo de Sensor</label>
        <select name="tipo_sensor_id" id="tipo_sensor_id"
                style="width:100%; padding:10px; border-radius:10px; border:1px solid #E5E5E5;">
          <option value="">Selecione</option>
          {{#each tiposSensores}}
            <option value="{{this.id}}" {{selected-option this.id ../sensor.tipoSensor.id ../old.tipo_sensor_id}}>
              {{this.nome}}
            </option>
          {{/each}}
        </select>
      </div>

    </div>

    <!-- Bot√µes -->
    <div style="display:flex; justify-content:center; gap:20px; margin-top:30px;">
      <a href="/sensor/listagem" 
         style="background-color:#CDE3DC; border:none; color:#133E34; font-weight:500; border-radius:10px; padding:10px 18px; text-decoration:none; display:flex; align-items:center; gap:6px;">
        <i class="fa-solid fa-circle-xmark"></i> Cancelar
      </a>

      <button type="submit" 
              style="background-color:#133E34; border:none; color:white; font-weight:500; border-radius:10px; padding:10px 18px; cursor:pointer; display:flex; align-items:center; gap:6px;">
        <i class="fa-solid fa-pencil"></i> Atualizar
      </button>
    </div>
  </form>
</div>
